{
   "_id": "extrafields:Contact",
   "class": "extrafields",
   "ico": "16-User.png",
   "longList": [
       "code_client",
       "zip",
       "town",
       "address",
       "phone",
       "idprof1",
       "commercial_id"
   ],
   "shortList": [
       "town",
       "phone",
       "commercial_id"
   ],
   "fields": {
       "name": {
           "type": "input",
           "length": 60,
           "enable": true,
           "validate": {
               "required": true,
               "minlength": 3
           }
       },
       "societe": {
           "enable": true,
           "class": "Societe",
           "view": "list"
       },
       "Status": {
           "type": "select",
           "enable": true,
           "default": "ST_NEVER",
           "status": true,
           "aoColumns": {
               "sClass": "center",
               "bSearchable": true,
               "bVisible": true
           },
           "values": {
               "ST_NO": {
                   "enable": true,
                   "type": "closed",
                   "cssClass": "red-gradient"
               },
               "ST_TODO": {
                   "enable": false,
                   "type": "prsopect",
                   "cssClass": "blue-gardient"
               },
               "ST_NEVER": {
                   "enable": true,
                   "type": "never",
                   "cssClass": "grey-gradient"
               },
               "ST_PCOLD": {
                   "enable": true,
                   "type": "prospect",
                   "cssClass": "blue-gradient"
               },
               "ST_PHOT": {
                   "enable": true,
                   "type": "prospect",
                   "cssClass": "red-gradient"
               },
               "ST_CLESS3": {
                   "enable": true,
                   "type": "customer",
                   "cssClass": "orange-gradient"
               },
               "ST_CUST": {
                   "enable": true,
                   "type": "customer",
                   "cssClass": "green-gradient"
               },
               "ST_CPAR": {
                   "enable": false,
                   "type": "customer",
                   "cssClass": "green-gradient"
               }
           }
       },
       "address": {
           "type": "textarea",
           "cols": 40,
           "rows": 3,
           "enable": true,
           "aoColumns": {
               "sClass": "",
               "bSearchable": true,
               "bVisible": false
           }
       },
       "zip": {
           "type": "text",
           "label": "Zip",
           "length": 15,
           "enable": true,
           "javascript": null,
           "aoColumns": {
               "sClass": "center edit",
               "bSearchable": true,
               "bVisible": true
           }
       },
       "town": {
           "type": "text",
           "label": "Town",
           "length": 15,
           "enable": true,
           "javascript": null,
           "aoColumns": {
               "sClass": "edit",
               "bSearchable": true,
               "bVisible": true
           }
       },
       "country_id": {
           "type": "select",
           "enable": true,
           "dict": "dict:country",
           "default": "substr($langs->defaultlang,3,5)"
       },
       "state_id": {
           "type": "select",
           "enable": true,
           "dict": "dict:fk_departements"
       },
       "DefaultLang": {
           "type": "select",
           "enable": false,
           "dict": null
       },
       "photo": {
           "type": "uploadfile",
           "enable": true
       },
       "phone": {
           "type": "AC_TEL",
           "ico": "AC_TEL",
           "enable": true,
           "aoColumns": {
               "sClass": "center",
               "bSearchable": true,
               "bVisible": false
           },
           "mask": "+99 9 99 99 99 99"
       },
       "fax": {
           "type": "AC_FAX",
           "ico": "AC_FAX",
           "enable": true,
           "mask": "+99 9 99 99 99 99"
       },
       "email": {
           "type": "AC_EMAIL",
           "ico": "AC_EMAIL",
           "enable": true,
           "validate": {
               "email": true
           }
       },
       "civilite_id": {
           "type": "select",
           "label": "UserTitle",
           "default": "NO",
           "dict": "dict:fk_civilite",
           "enable": true
       }
   }
}